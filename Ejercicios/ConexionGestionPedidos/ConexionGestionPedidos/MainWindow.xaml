<Window x:Class="ConexionGestionPedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConexionGestionPedidos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Clientes:" HorizontalAlignment="Left" Margin="63,51,0,0" VerticalAlignment="Top" FontSize="22"/>
        <ListBox x:Name="listaClientes" HorizontalAlignment="Left" Height="184" Margin="34,114,0,0" VerticalAlignment="Top" Width="148" SelectionChanged="listaClientes_SelectionChanged"/>
        <Label Content="Pedidos" HorizontalAlignment="Left" Margin="247,51,0,0" VerticalAlignment="Top" FontSize="22"/>
        <ListBox x:Name="listaPedidos" HorizontalAlignment="Left" Height="184" Margin="228,110,0,0" VerticalAlignment="Top" Width="137"/>
        <ListBox x:Name="todosPedidos" HorizontalAlignment="Left" Height="261" Margin="410,110,0,0" VerticalAlignment="Top" Width="334"/>
        <Button x:Name="btnBorrar" Content="Borrar" HorizontalAlignment="Left" Height="48" Margin="513,43,0,0" VerticalAlignment="Top" Width="149" FontSize="22" Click="btnBorrar_Click"/>

    </Grid>
</Window>
